<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="oldpersonthing.opt.NurseLoginActivity"
    android:orientation="vertical"
    android:background="#ffb90012">

    <CheckBox
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Nurse"
        android:id="@+id/checkBoxNewNurse"
        android:layout_gravity="center_horizontal"
        android:checked="false"
        android:textSize="27dp"
        android:textColor="#fff8fdff"
        android:layout_marginBottom="83dp"
        android:gravity="center_vertical|center_horizontal"
        android:layout_above="@+id/editTextNameNurse"
        android:layout_centerHorizontal="true" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editTextNameNurse"
        android:layout_gravity="center_horizontal"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:textColor="#fff8fdff"
        android:gravity="center_vertical|center_horizontal"
        android:textSize="25dp" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Next"
        android:id="@+id/buttonNextNurse"
        android:layout_gravity="right"
        android:background="#ff1379db"
        android:textColor="#fff8fdff"
        android:layout_below="@+id/editTextNameNurse"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="52dp" />
</RelativeLayout>
