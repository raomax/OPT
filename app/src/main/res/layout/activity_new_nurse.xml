<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="oldpersonthing.opt.NewNurseActivity"
    android:orientation="vertical"
    android:background="#ffb90012">

    <Button
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Add Patient"
        android:id="@+id/buttonAddOldPerson"
        android:layout_gravity="center_horizontal"
        android:background="#ff18aaed"
        android:textColor="#fff8fdff" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:text="Name"
        android:ems="10"
        android:id="@+id/editTextOldPersonName"
        android:textColor="#fff8fdff"
        android:gravity="center_vertical|center_horizontal" />

    <ListView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/listView"
        android:layout_gravity="center_horizontal"
        android:background="#ffffa008" />
</LinearLayout>
